<% if (error.status < 500) { %>
<section>
  <div class="error-container">
    <h1><%= message %></h1>
    <h2><%= error.status %></h2>
    <pre><%= error.stack %></pre>
  </div>
  <button class="btn--back">Back To Prev Page</button>
</section>
<% } else { %>
<section>
  <div class="error-container">
    <h1>Something went wrong..</h1>
    <h2><%= error.status %></h2>
    <pre>Internet Server Error</pre>
  </div>
  <button class="btn--back">Back To Prev Page</button>
</section>
<% } %>
